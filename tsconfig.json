{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}